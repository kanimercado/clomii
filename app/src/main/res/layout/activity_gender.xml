<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomadera"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".AvatarHombreActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logo_clomii" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hola"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/dedicatoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hola"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFF"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/mujer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:onClick="irMujer"
        android:layout_weight="1"
        android:src="@drawable/mujer" />

    <ImageView
        android:id="@+id/hombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:onClick="irHombre"
        android:layout_weight="1"
        android:src="@drawable/hombre" />

</LinearLayout>