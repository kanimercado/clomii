<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondomadera"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".AvatarHombreActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <!-- <ImageView
             android:id="@+id/flash"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:src="@drawable/flash1" />-->

        <ImageView
            android:id="@+id/flash_cuerpo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/cuerpo2" />

        <ImageView
            android:id="@+id/flash_peinado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/peinado1" />

        <ImageView
            android:id="@+id/flash_ojos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <!--      <ImageView
                  android:id="@+id/flash_ojos"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:src="@drawable/ojos1" />
      -->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/button"
            android:onClick="enviarMail"/>

    </RelativeLayout>


    <HorizontalScrollView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbars="none"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/razgos"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#202020"
                android:onClick="seleccionarPeinados"
                android:src="@drawable/doctor" />

            <ImageView
                android:id="@+id/peinado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="#202020"
                android:clickable="true"
                android:onClick="seleccionarOjos"
                android:src="@drawable/judge" />

            <ImageView
                android:id="@+id/ojos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/manager" />

            <ImageView
                android:id="@+id/nariz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/dj" />

            <ImageView
                android:id="@+id/boca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/dj" />

            <ImageView
                android:id="@+id/polera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/teacher" />

            <ImageView
                android:id="@+id/pantalon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/journalist" />

            <ImageView
                android:id="@+id/zapatos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/judge" />

        </LinearLayout>

    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.8">

        <HorizontalScrollView
            android:id="@+id/menu_peinados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/peinado1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:onClick="displayPeinado1"
                    android:src="@drawable/dj" />

                <ImageView
                    android:id="@+id/peinado2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:onClick="displayPeinado2"
                    android:src="@drawable/doctor" />

                <ImageView
                    android:id="@+id/peinado3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:onClick="displayPeinado3"
                    android:src="@drawable/teacher" />

                <ImageView
                    android:id="@+id/peinado4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"

                    android:src="@drawable/teacher" />

                <ImageView
                    android:id="@+id/peinado5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"

                    android:src="@drawable/teacher" />


                <ImageView
                    android:id="@+id/peinado6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"

                    android:src="@drawable/teacher" />

                <ImageView
                    android:id="@+id/peinado7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"

                    android:src="@drawable/teacher" />

                <ImageView
                    android:id="@+id/peinado8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"

                    android:src="@drawable/teacher" />

            </LinearLayout>

        </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/menu_ojos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ojos1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:src="@drawable/teacher"
                    android:onClick="displayOjos1"/>

                <ImageView
                    android:id="@+id/ojos2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:src="@drawable/doctor" />

                <ImageView
                    android:id="@+id/ojos3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:src="@drawable/doctor" />

                <ImageView
                    android:id="@+id/ojos4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:src="@drawable/teacher" />

                <ImageView
                    android:id="@+id/ojos5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:src="@drawable/teacher" />


                <ImageView
                    android:id="@+id/ojos6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:src="@drawable/teacher" />

                <ImageView
                    android:id="@+id/ojos7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:src="@drawable/teacher" />

                <ImageView
                    android:id="@+id/ojos8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="#202020"
                    android:src="@drawable/teacher" />

            </LinearLayout>

        </HorizontalScrollView>

    </RelativeLayout>
</LinearLayout>